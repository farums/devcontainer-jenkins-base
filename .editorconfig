; top-most EditorConfig file
; npm install -g editorconfig 
; https://overcoder.net/q/753409/editorconfig-%D0%B4%D0%BB%D1%8F-vs-code-%D0%BD%D0%B5-%D1%80%D0%B0%D0%B1%D0%BE%D1%82%D0%B0%D0%B5%D1%82
root = true

; Unix-style newlines
[*]
end_of_line = LF
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true


# Tab indentation (no size specified)
[Makefile]
indent_style = tab

### Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false